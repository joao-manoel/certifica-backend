generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EDITOR
  USER
}

enum PostStatus {
  DRAFT
  SCHEDULED
  PUBLISHED
}

enum Visibility {
  PUBLIC
  UNLISTED
  PRIVATE
}

model User {
  id        String   @id @default(uuid())
  email     String?  @unique
  username  String   @unique
  name      String
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Post    Post[]
  Comment Comment[]
}

model Post {
  id       String @id @default(uuid())
  authorId String
  author   User   @relation(fields: [authorId], references: [id]) // RESTRICT (default)

  title   String
  slug    String  @unique
  excerpt String? @db.VarChar(300)

  content Json
  coverId String?
  cover   Media?  @relation(fields: [coverId], references: [id], onDelete: SetNull, onUpdate: Cascade)

  status       PostStatus @default(DRAFT)
  visibility   Visibility @default(PUBLIC)
  publishedAt  DateTime?
  scheduledFor DateTime?

  views Int @default(0)

  wordCount Int @default(0)
  readTime  Int @default(0) // minutes

  categories CategoryOnPosts[]
  tags       TagOnPosts[]
  comments   Comment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  PostView PostView[]

  @@index([status, publishedAt])
  @@index([publishedAt])
  @@index([visibility])
  @@index([status, scheduledFor])
}

enum ViewStatus {
  PENDING // criada e aguardando flush
  APPLIED // consolida
  DISCARDED // descartada (bot/duplicata/falha)
}

model PostView {
  id     String @id @default(uuid())
  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt   DateTime  @default(now())
  processedAt DateTime?

  status ViewStatus @default(PENDING)

  // Observáveis/atributos
  day         String  @db.VarChar(8) // yyyymmdd (UTC), útil p/ agregações
  ipHash      String? @db.VarChar(64) // SHA-256 do IP truncado + pepper
  ua          String? @db.VarChar(300)
  referrer    String? @db.VarChar(300)
  path        String? @db.VarChar(200)
  fingerprint String? @db.VarChar(64)

  // heurísticas
  isBot   Boolean @default(false)
  country String? @db.VarChar(2) // opcional se resolver geoloc no futuro
  device  String? @db.VarChar(30) // "mobile/desktop/tablet" (heurística)
  browser String? @db.VarChar(30)
  os      String? @db.VarChar(30)

  @@index([postId, status])
  @@index([postId, day, status])
  @@index([createdAt])
}

model UtmEvent {
  id String @id @default(uuid())

  // snapshot dos valores recebidos (crus)
  source   String? @db.VarChar(100)
  medium   String? @db.VarChar(100)
  campaign String? @db.VarChar(150)
  term     String? @db.VarChar(150)
  content  String? @db.VarChar(150)

  // dimensões normalizadas (FKs)
  sourceId   String?
  mediumId   String?
  campaignId String?

  sourceDim   UtmSource?   @relation(fields: [sourceId], references: [id], onDelete: SetNull)
  mediumDim   UtmMedium?   @relation(fields: [mediumId], references: [id], onDelete: SetNull)
  campaignDim UtmCampaign? @relation(fields: [campaignId], references: [id], onDelete: SetNull)

  referrer   String? @db.VarChar(300)
  landingUrl String? @db.VarChar(400)
  device     String? @db.VarChar(30)
  browser    String? @db.VarChar(30)
  os         String? @db.VarChar(30)
  country    String? @db.VarChar(2)

  capturedAt DateTime @default(now())

  @@index([capturedAt])
  @@index([sourceId, mediumId, campaignId])
}

model UtmSource {
  id       String     @id @default(uuid())
  slug     String     @unique @db.VarChar(120) // ex: "facebook", "x", "whatsapp"
  name     String     @db.VarChar(120)
  UtmEvent UtmEvent[]
}

model UtmMedium {
  id       String     @id @default(uuid())
  slug     String     @unique @db.VarChar(120) // ex: "social", "cpc", "email"
  name     String     @db.VarChar(120)
  UtmEvent UtmEvent[]
}

model UtmCampaign {
  id       String     @id @default(uuid())
  slug     String     @unique @db.VarChar(160) // ex: "post_share", "bf_2025"
  name     String     @db.VarChar(160)
  UtmEvent UtmEvent[]
}

model Media {
  id          String  @id @default(uuid())
  url         String
  alt         String? @db.VarChar(500)
  mimeType    String? @db.VarChar(100)
  width       Int?
  height      Int?
  dominantClr String? @db.VarChar(12)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Post Post[]
}

model Category {
  id        String            @id @default(uuid())
  name      String
  slug      String            @unique
  posts     CategoryOnPosts[]
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
}

model CategoryOnPosts {
  postId     String
  categoryId String

  post     Post     @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([postId, categoryId])
}

model Tag {
  id        String       @id @default(uuid())
  name      String
  slug      String       @unique
  posts     TagOnPosts[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model TagOnPosts {
  postId String
  tagId  String

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([postId, tagId])
}

model Comment {
  id     String @id @default(uuid())
  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  authorId String?
  author   User?   @relation(fields: [authorId], references: [id], onDelete: SetNull, onUpdate: Cascade)

  parentId String?
  parent   Comment?  @relation("CommentToComment", fields: [parentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  children Comment[] @relation("CommentToComment")

  name    String?
  email   String?
  content String

  isApproved Boolean @default(false)
  isSpam     Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
